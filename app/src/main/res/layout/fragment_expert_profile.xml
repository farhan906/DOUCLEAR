<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- CardView container for expert profile details -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewExpertProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Expert Profile Details -->
            <!-- Add your expert profile details layout here -->

            <!-- Example: Expert's Name -->
            <TextView
                android:id="@+id/textViewExpertName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="#000000"/>

            <!-- Expert's Gender -->
            <TextView
                android:id="@+id/textViewExpertGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@id/textViewExpertName"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#000000"/>

            <!-- Expert's Age -->
            <TextView
                android:id="@+id/textViewExpertAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:layout_below="@id/textViewExpertGender"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#000000"/>

            <!-- Expert's Field of Expertise -->
            <TextView
                android:id="@+id/textViewExpertField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert in"
                android:layout_below="@id/textViewExpertAge"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#000000"/>

            <!-- Expert's Qualifications -->
            <TextView
                android:id="@+id/textViewExpertQualifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualifications"
                android:layout_below="@id/textViewExpertField"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#000000"/>

            <!-- Expert's Remarks -->
            <TextView
                android:id="@+id/textViewExpertRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:layout_below="@id/textViewExpertQualifications"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#000000"/>

            <!-- Expert's Location -->
            <TextView
                android:id="@+id/textViewExpertLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_below="@id/textViewExpertRemarks"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#000000"/>

            <!-- Button to Ask Doubt -->
            <Button
                android:id="@+id/buttonAskDoubt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewExpertLocation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="100dp"
                android:text="Ask Doubt"
                android:textAlignment="center"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                tools:ignore="ObsoleteLayoutParam" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
